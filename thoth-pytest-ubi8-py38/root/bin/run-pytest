#!/bin/bash

set -o errexit
trap 'echo "Aborting due to errexit on line $LINENO. Exit code: $?" >&2' ERR
set -o errtrace
set -o pipefail

if [[ -f setup.py ]]; then
    if [ "$DEBUG" == "1" ]; then
        micropipenv install --dev
    else
        micropipenv install --dev > /dev/null
    fi
    python3 setup.py test 2>&1
fi

#end.
